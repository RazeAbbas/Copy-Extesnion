{
  "manifest_version": 3,
  "name": "Shortcuts",
  "description": "Shortcuts to your all Platforms",
  "version": "1.0.0",
  "permissions": [
    "tabs",
    "activeTab",
    "contextMenus",
    "storage"
  ],
  "icons": {
    "128": "assets/img/icon128.png",
    "48": "assets/img/icon48.png",
    "32": "assets/img/icon32.png",
    "16": "assets/img/icon16.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/img/icon16.png",
      "48": "assets/img/icon48.png",
      "128": "assets/img/icon128.png"
    }
  }
}
